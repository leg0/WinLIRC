{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 13,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "vcpkg",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "unity",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_UNITY_BUILD": "ON"
            }
        },
        {
            "name": "x86",
            "inherits": [ "vcpkg" ],
            "binaryDir": "${sourceDir}/_build-${presetName}",
            "architecture": "Win32",
            "displayName": "Windows x86"
        },
        {
            "name": "x86-unity",
            "inherits": [ "x86", "unity" ]
        },
        {
            "name": "x64",
            "inherits": [ "vcpkg" ],
            "binaryDir": "${sourceDir}/_build-${presetName}",
            "architecture": "x64",
            "displayName": "Windows x64"
        },
        {
            "name": "x64-unity",
            "inherits": [ "x64", "unity" ]
        }
    ]
}

